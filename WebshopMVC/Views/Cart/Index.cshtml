@using WebshopMVC.Models;
@model IEnumerable<CartItem>;
<!DOCTYPE html>
    <html>
    <head>
        <title>Cart</title>
    </head>
    <body>
        <div>
            @if (Model.Count()==0)
            {
                <div>Üres a kosarad!</div>
            }
            else
            {
                @foreach (CartItem item in Model)
                {
                    <div>@item.Product.Name @item.Product.Price Ft @item.Quantity Darab <a href="/cart/delete?id=@item.Product.Id">X</a></div>
                }
            }
        
        </div>
    </body>
    </html>